<h1>Links</h1>

<% if flash[:success] %>
  <div class="success">
    <h3>Success!</h3>
    <p><%= flash[:success] %></p>
  </div>
<% end %>

<p><%= link_to 'New', new_link_path, :class => "pure-button pure-button-primary" %></p>

<% if @links.any? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Publishers</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
  <% @links.each do |link| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= link_to link.title, link.url %></td>
      <td></td>
      <td><%= link.created_at.to_formatted_s(:long) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
