<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "pure-form pure-form-aligned" }) do |f| %>
  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="pure-control-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <div class="pure-controls">
  <% if devise_mapping.rememberable? -%>
    <label for="user_remember_me" class="pure-checkbox">
      <%= f.check_box :remember_me %> Remember me
    </label>
   <% end -%>
   <%= f.submit "Sign in", :class => 'pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
