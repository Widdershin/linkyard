<h1>My Interactions</h1>

<% if flash[:success] %>
  <div class="success">
    <h3>Success!</h3>
    <p><%= flash[:success] %></p>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="error">
    <h3>Error!</h3>
    <p><%= flash[:error] %></p>
  </div>
<% end %>

<p><%= link_to 'New', new_interaction_path, :class => "pure-button pure-button-primary" %></p>

<% if @interactions.any? %>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @interactions.each do |interaction| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= interaction.name %></td>
      <td><%= interaction.created_at.to_formatted_s(:long) %></td>
      <td>
        <%= link_to 'Edit', edit_interaction_path(interaction.id) %>
        <%= link_to 'Delete', interaction_path(interaction.id), data: { :confirm => "Are you sure you want to delete #{interaction.type.underscore.humanize}?" }, :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
