<h1>New Interaction</h1>

<% if @interaction.errors.any? %>
  <div class="error">
    <h3>Invalid input</h3>
    <p><%= @interaction.errors.full_messages.to_sentence %></p>
  </div>
<% else %>
  <div class="pure-form pure-form-aligned">
    <div class="pure-control-group">
      <label for="type">Type</label>
      <%= select_tag :type, options_for_select(available_interaction_options, @interaction.try(:type)), :class => "pure-input-1-4" %>
    </div>
  </div>
<% end %>

<%= form_for @interaction, :url => interactions_path, :html => { :class => "pure-form pure-form-aligned" } do |f| %>  

  <% if @interaction.errors.any? %>
    <%= render @interaction.type.underscore %>
  <% else %>
    <div id="new-interaction-container"></div>
  <% end %>

  <div class="pure-controls">
    <%= f.submit 'Add', :class => "pure-button pure-button-primary pure-input-1-4" %>
  </div>
<% end %>
