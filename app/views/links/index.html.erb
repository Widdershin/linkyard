<h1>Links</h1>

<%= render "shared/notifications" %>

<p><%= link_to 'New', new_link_path, :class => "pure-button pure-button-primary" %></p>

<% if @links.any? %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Publishers</th>
      <th>Tags</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
  <%= will_paginate @links %>
  <% @links.each do |link| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= link_to link.id, link_path(link) %></td>
      <td><%= link_to link.title, link.url %></td>
      <td><%= link.link_interactions.map { |li| "#{li.interaction.name} (#{li.status})" }.join(', ') %></td>
      <td><%= link.tags.map { |t| t.name }.join(", ") %></td>
      <td><%= link.created_at.to_formatted_s(:long) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
