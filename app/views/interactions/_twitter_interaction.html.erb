<%= fields_for @interaction do |f| %>
  <%= hidden_field_tag :type, @interaction.type %>
  
  <div class="pure-control-group">
    <%= f.label :consumer_key %>
    <%= f.text_field :consumer_key, :autofocus => true %>
  </div>

  <div class="pure-control-group">
    <%= f.label :consumer_secret %>
    <%= f.text_field :consumer_secret %>
  </div>

  <div class="pure-control-group">
    <%= f.label :access_token %>
    <%= f.text_field :access_token %>
  </div>

  <div class="pure-control-group">
    <%= f.label :access_token_secret %>
    <%= f.text_field :access_token_secret %>
  </div>
<% end %>
